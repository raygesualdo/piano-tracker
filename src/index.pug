doctype html
html
  head
    meta(charset='utf-8')
    title Piano Tracker
    meta(name='description' content='Visualize my progress parcticing the piano in 2021.')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='icon' type='image/x-icon' href='/favicon.ico')
    link(rel='stylesheet', href='styles.css')
  body
    h1(
      class='font-medium text-center mt-20 mb-10 text-5xl md:text-6xl xl:text-7xl 2xl:text-8xl'
    ) Piano Tracker
    .px-1
      div(class='border border-gray-400 rounded w-full mx-auto max-w-min overflow-auto sm:overflow-visible sm:w-auto')
        .w-min.p-4
          .month-grid
            .col-span-5 Jan
            .col-span-4 Feb
            .col-span-4 Mar
            .col-span-4 Apr
            .col-span-5 May
            .col-span-4 Jun
            .col-span-4 Jul
            .col-span-5 Aug
            .col-span-4 Sep
            .col-span-5 Oct
            .col-span-4 Nov
            .col-span-4 Dec
          .day-grid
            each day, index in self.days
              .day(
                class=self.getCellColorClasses(day.amount) 
                data-tooltip=`${self.formatDate(day.date)}\n⏱ ${day.amount}m` 
                tabindex="0"
              ) &nbsp;

    .mx-auto.w-max.mt-8
      p(class='text-center text-sm md:text-base') Legend
      each item in self.legend
        div(class="flex items-center gap-x-1.5")
          .h-3.w-3.rounded-sm(class=self.getCellColorClasses(item[0]))
          p(class='text-xs md:text-sm')= item[1]

    .absolute.bottom-2.w-full.text-xs.text-center.text-gray-600.px-2
