{
  "scripts": {
    "tailwind:build": "tailwind build src/styles.css -o build/styles.css",
    "tailwind:watch": "chokidar 'src/*.css' -c 'npm run tailwind:build'",
    "generate:start": "nodemon --watch src -e js,pug src/generate.js",
    "generate:build": "node src/generate.js",
    "serve": "serve build",
    "start": "npm-run-all tailwind:build --parallel tailwind:watch generate:start serve",
    "build": "npm-run-all tailwind:build generate:build"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "chokidar-cli": "^2.1.0",
    "cssnano": "^4.1.10",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.0",
    "postcss-cli": "^8.3.0",
    "pug": "^3.0.0",
    "serve": "^11.3.2",
    "tailwindcss": "^2.0.1"
  }
}
